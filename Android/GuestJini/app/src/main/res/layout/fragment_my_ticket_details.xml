<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myTicketDetailsLayout"
    tools:context=".Support.MyTicketDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myTicketsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/MyTicketsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:letterSpacing="0.1"
            android:text="@string/my_tickets"
            android:textColor="@color/colorZambezi"
            android:textSize="14sp"
            app:fontFamily="@font/roboto_bold"
            app:layout_constraintStart_toEndOf="@+id/leftArrowMark"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/leftArrowMark"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/back_arrow_icon"
            android:src="@drawable/back_arrow_icon_xxhdpi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTicketsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="800dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/OpenCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="32dp"
                    app:cardBackgroundColor="@color/colorWhisper1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/openCardViewLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="14dp">

                        <TextView
                            android:id="@+id/ticketsStatus"
                            android:layout_width="54dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/open_status"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:letterSpacing="0.08"
                            android:text="@string/open"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.555">

                        </TextView>

                        <TextView
                            android:id="@+id/tickestsDateAndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="186dp"
                            android:layout_marginTop="4dp"
                            android:letterSpacing="0.07"
                            android:text="@string/tickestsDateAndTime"
                            android:textColor="@color/colorCharcoal"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto_medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/submittedOn" />

                        <TextView
                            android:id="@+id/ticketsNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="186dp"
                            android:layout_marginTop="23dp"
                            android:letterSpacing="0.05"
                            android:text="@string/ticketsNo"
                            android:textColor="@color/colorDimGray"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tickestsDateAndTime" />

                        <TextView
                            android:id="@+id/ticketsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="186dp"
                            android:layout_marginTop="4dp"
                            android:letterSpacing="0.05"
                            android:text="@string/ticketsValue"
                            android:textColor="@color/colorCharcoal"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto_medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ticketsNo" />

                        <TextView
                            android:id="@+id/submittedOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="186dp"
                            android:layout_marginTop="16dp"
                            android:letterSpacing="0.05"
                            android:text="@string/submittedOn"
                            android:textColor="@color/colorDimGray"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto_medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/ticketsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="32dp"
                    android:letterSpacing="0.05"
                    android:text="@string/ticketsName"
                    android:textColor="@color/colorCharcoal"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/OpenCardView" />

                <TextView
                    android:id="@+id/ticketDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="32dp"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/ticketNameDescription"
                    android:textColor="@color/colorDimGray"
                    android:textSize="12sp"
                    android:letterSpacing="0.016"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketsName" />

                <View
                    android:id="@+id/ticketNameDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/colorWhisper2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketDescription"></View>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketNameDivider">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/attachFilesIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="32dp"
                        app:backgroundTint="@color/colorSummerSky"
                        app:fabCustomSize="34dp"
                        app:maxImageSize="20dp"
                        app:srcCompat="@drawable/attachment_icon"
                        app:tint="@color/colorWhite">

                    </com.google.android.material.floatingactionbutton.FloatingActionButton>

                    <TextView
                        android:id="@+id/attachmentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/attachFilesIcon"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="0.06"
                        android:text="@string/attachmentTitle"
                        android:textColor="@color/colorZambezi"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/attachmentFiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/attachmentTitle"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/attachFilesIcon"
                        android:fontFamily="@font/roboto"
                        android:letterSpacing="0.06"
                        android:text="@string/attachmentFiles"
                        android:textColor="@color/colorSuvaGray"
                        android:textSize="11sp" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                    <TextView
                        android:id="@+id/activityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="315dp"
                        android:fontFamily="@font/roboto_medium"
                        android:letterSpacing="0.06"
                        android:text="@string/activityTitle"
                        android:textColor="@color/colorZambezi1"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/materialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="32dp"
                        android:backgroundTint="@color/colorAzure"
                        app:cardCornerRadius="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/activityTitle">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/writeAReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="26dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/roboto_bold"
                                android:letterSpacing="0.05"
                                android:text="You"
                                android:textColor="@color/colorDimGray"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></TextView>

                            <!--                            <com.google.android.material.textfield.TextInputLayout-->
                            <!--                                android:id="@+id/writeReviewInputLayout"-->
                            <!--                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="100dp"-->
                            <!--                                android:layout_marginStart="16dp"-->
                            <!--                                android:layout_marginTop="8dp"-->
                            <!--                                android:layout_marginEnd="16dp"-->
                            <!--                                app:boxCornerRadiusBottomEnd="@dimen/editfileds_corners_radius"-->
                            <!--                                app:boxCornerRadiusBottomStart="@dimen/editfileds_corners_radius"-->
                            <!--                                app:boxCornerRadiusTopEnd="@dimen/editfileds_corners_radius"-->
                            <!--                                app:boxCornerRadiusTopStart="@dimen/editfileds_corners_radius"-->
                            <!--                                app:boxStrokeColor="@color/colorDimGray"-->
                            <!--                                app:boxStrokeWidth="1dp"-->
                            <!--                                app:errorEnabled="true"-->
                            <!--                                app:layout_constraintEnd_toEndOf="parent"-->
                            <!--                                app:layout_constraintStart_toStartOf="parent"-->
                            <!--                                app:layout_constraintTop_toBottomOf="@+id/writeAReview"-->
                            <!--                                app:placeholderTextColor="@color/colorDimGray">-->

                            <!--                                <com.google.android.material.textfield.TextInputEditText-->
                            <!--                                    android:id="@+id/writeReview"-->
                            <!--                                    android:layout_width="match_parent"-->
                            <!--                                    android:layout_height="86dp"-->
                            <!--                                    android:layout_margin="@dimen/margin"-->
                            <!--                                    android:backgroundTint="@color/colorWhite"-->
                            <!--                                    android:inputType="textMultiLine" />-->
                            <!--                            </com.google.android.material.textfield.TextInputLayout>-->
                            <EditText
                                android:id="@+id/youEditBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="26dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="26dp"
                                android:background="@drawable/review_edit_box"
                                android:inputType="textMultiLine"
                                android:paddingStart="6dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="62dp"
                                android:textColor="@color/colorSuvaGray"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/writeAReview">

                            </EditText>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/writeReviewSubmitButton"
                                android:layout_width="80dp"
                                android:layout_height="38dp"
                                android:layout_marginStart="26dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="@color/colorSummerSky"
                                android:fontFamily="@font/roboto_bold"
                                android:letterSpacing="0.06"
                                android:text="@string/submit"
                                android:textSize="10sp"
                                app:cornerRadius="@dimen/submit_button_radius"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/youEditBox">

                            </com.google.android.material.button.MaterialButton>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/horizontal_line"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationViewLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></View>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:itemIconTint="@drawable/item_selected"
            app:itemTextColor="@drawable/item_selected"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/bottom_navigation_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>