<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="100dp">

                    <ImageView
                        android:id="@+id/FilterIamge"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/filter_image_xxhdpi"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <TextView
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="52dp"
                        android:letterSpacing="0.05"
                        android:text="@string/filter"
                        android:textColor="#5A5A5A"
                        android:textSize="14dp"
                        app:fontFamily="@font/roboto_medium"
                        app:layout_constraintStart_toEndOf="@+id/FilterIamge"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintGuide_begin="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="365dp"
                        android:layout_marginLeft="365dp"
                        android:layout_marginEnd="42dp"
                        android:layout_marginRight="42dp"
                        android:layout_marginBottom="500dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintGuide_begin="349dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clearAllLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="#E6E6E6"
                        app:layout_constraintEnd_toStartOf="@+id/guideline6"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/FilterIamge">

                        <TextView
                            android:id="@+id/clearAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="16dp"
                            android:letterSpacing="0.05"
                            android:text="@string/clear_all"
                            android:textColor="#B5B5B5"
                            android:textSize="13dp"
                            app:fontFamily="@font/roboto_bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/clearDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:letterSpacing="0.05"
                            android:text="@string/filter_description"
                            android:textColor="#909090"
                            android:textSize="12dp"
                            app:fontFamily="@font/roboto_medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/clearAll" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:letterSpacing="0.05"
                        android:text="@string/status"
                        android:textColor="#464646"
                        android:textSize="12dp"
                        app:fontFamily="@font/roboto_medium"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/clearAllLayout" />

                    <view
                        android:id="@+id/statusDivider"
                        android:layout_width="343dp"
                        android:layout_height="0.5dp"

                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/status"></view>


                    <LinearLayout
                        android:id="@+id/openCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/custom_checkbox"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/statusDivider"></LinearLayout>

                    <TextView
                        android:id="@+id/open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/open"
                        android:textColor="#747474"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@+id/openCheckBox"
                        app:layout_constraintTop_toBottomOf="@+id/statusDivider" />

                    <TextView
                        android:id="@+id/openDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        android:text="Tickets that are assigned but not closed."
                        android:textColor="#747474"
                        android:textSize="10dp"
                        app:fontFamily="@font/roboto_italic"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/open" />


                    <LinearLayout
                        android:id="@+id/closedCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="46dp"
                        android:background="@drawable/custom_checkbox"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/openCheckBox"></LinearLayout>

                    <TextView
                        android:id="@+id/closed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:text="@string/closeed"
                        android:textColor="#747474"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@+id/closedCheckBox"
                        app:layout_constraintTop_toBottomOf="@+id/openDescription" />


                    <TextView
                        android:id="@+id/closedDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        android:text="Tickets that have been closed."
                        android:textColor="#747474"
                        android:textSize="10dp"
                        app:fontFamily="@font/roboto_italic"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/closed" />

                    <LinearLayout
                        android:id="@+id/draftCheckBox"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="46dp"
                        android:background="@drawable/custom_checkbox"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/closedCheckBox"></LinearLayout>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="22dp"
                        android:text="@string/draft"
                        android:textColor="#747474"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@+id/draftCheckBox"
                        app:layout_constraintTop_toBottomOf="@+id/closedDescription" />

                    <TextView
                        android:id="@+id/draftDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        android:text="Tickets that are saved but not submitted."
                        android:textColor="#747474"
                        android:textSize="10dp"
                        app:fontFamily="@font/roboto_italic"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/textView20" />

                    <TextView
                        android:id="@+id/submittedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:text="@string/submitted_date"
                        android:textColor="#464646"
                        android:textSize="12dp"
                        app:fontFamily="@font/roboto_medium"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/draftDescription" />

                    <view
                        android:id="@+id/submittedDateDivider"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginRight="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/submittedDate"></view>

                    <view
                        android:id="@+id/submittedDateDivider2"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout9"></view>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/today"
                        android:elevation="5dp"
                        android:shadowColor="#00000033"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@id/submittedDateDivider">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:letterSpacing="0.03"
                            android:text="@string/today"
                            android:textColor="#747474"
                            android:textSize="11dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="9dp"
                            android:layout_height="9dp"
                            android:layout_marginStart="100dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/black_drop_down"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView5"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/sortIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/filter_sort_icon_xxhdpi"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/submittedDateDivider2">

                    </ImageView>

                    <TextView
                        android:id="@+id/sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="34dp"
                        android:letterSpacing="0.05"
                        android:text="@string/sort"
                        android:textColor="#5A5A5A"
                        android:textSize="14dp"
                        app:fontFamily="@font/roboto_medium"
                        app:layout_constraintStart_toEndOf="@+id/sortIcon"
                        app:layout_constraintTop_toBottomOf="@+id/submittedDateDivider2" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toBottomOf="@+id/submittedDateDivider2">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:letterSpacing="0.03"
                            android:text="@string/ascending"
                            android:textColor="#747474"
                            android:textSize="10dp"
                            app:fontFamily="@font/roboto_medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/black_drop_down"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/textView"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/submittedRadio"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="42dp"
                        android:background="@drawable/custom_radio"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/sortIcon"></LinearLayout>

                    <TextView
                        android:id="@+id/submittedRadioTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="44dp"
                        android:text="@string/submitted_date_time"
                        android:textColor="#747474"
                        android:textSize="12dp"
                        app:fontFamily="@font/roboto_medium"
                        app:layout_constraintStart_toEndOf="@+id/submittedRadio"
                        app:layout_constraintTop_toBottomOf="@+id/sort" />

                    <LinearLayout
                        android:id="@+id/subjectRadio"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/custom_radio"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@id/submittedRadio"></LinearLayout>

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="32dp"
                        android:text="@string/subject"
                        android:textColor="#747474"
                        android:textSize="12dp"
                        app:fontFamily="@font/roboto_medium"
                        app:layout_constraintStart_toEndOf="@+id/subjectRadio"
                        app:layout_constraintTop_toBottomOf="@+id/submittedRadioTitle" />

                    <LinearLayout
                        android:id="@+id/statusRadio"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/custom_radio"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@+id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/subjectRadio"></LinearLayout>

                    <TextView
                        android:id="@+id/statusRadioTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="32dp"
                        android:text="@string/status"
                        android:textColor="#747474"
                        android:textSize="12dp"
                        app:fontFamily="@font/roboto_medium"
                        app:layout_constraintStart_toEndOf="@+id/subjectRadio"
                        app:layout_constraintTop_toBottomOf="@+id/subject" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.navigation.NavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>