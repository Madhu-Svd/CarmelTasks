<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addItemMainLayout"
    tools:context=".AddItem">

    <LinearLayout
        android:id="@+id/addItemSubLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/addItemHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/additem_header_border"
            android:elevation="6dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Add Item"
                android:textColor="#5A5A5A"
                android:textSize="20dp"></TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cancel_icon"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addItemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto"
                android:text="DESCRIPTION"
                android:textColor="#747474"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/additem_border"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto"
                android:text="QTY"
                android:textColor="#747474"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/qtyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="160dp"
                android:background="@drawable/additem_border"
                android:ems="10"
                android:inputType="textPersonName|textPassword"
                android:padding="13dp"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto"
                android:text="FULLFILLMENT DUE DATE"
                android:textColor="#747474"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <EditText
                    android:id="@+id/fullfillmentDueDate"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/additem_border"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="13dp"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/calender_icons"></ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/roboto"
                android:text="APPROXIMATE PRICE"
                android:textColor="#747474"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/approximatePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="160dp"
                android:background="@drawable/additem_border"
                android:ems="10"
                android:inputType="textPersonName|textPassword"
                android:padding="13dp"
                android:textSize="10dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/additem_footer_border"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/cancelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:text="CANCEL"
                android:textColor="#545454"
                android:textSize="12dp"></TextView>

            <Button
                android:id="@+id/doneButton"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/roboto_bold"
                android:text="DONE"
                android:textColor="#FFFFFF"
                android:textSize="12dp"></Button>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
