<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainLayout"
    tools:context=".AcknowledgementRegistered">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/invitePeopleLayout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:id="@+id/acknowledgementHeader"
            android:background="#F6F8F9">

            <ImageView
                android:id="@+id/burgerIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/burger_icon">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@drawable/layout_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/requisitionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/requisitionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="5dp"
                        android:text="REQUISITION"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/requisition_line">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="1"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="2"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="3"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="4"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="5"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="28dp"
                        android:text="6"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/requisition_skyblue_circle"
                      >
                    </TextView>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/acknowledgementContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="ACKNOWLEDGEMENT"
                    android:textColor="#B5B5B5"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Your request has been registered."
                    android:textColor="#747474"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/lorem_text"
                    android:textColor="#747474"
                    android:textSize="12dp"></TextView>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>