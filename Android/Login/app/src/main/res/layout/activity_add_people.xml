<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPeople">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/invitePeopleLayout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:id="@+id/attachmentPageHeader"
            android:background="#F6F8F9">

            <ImageView
                android:id="@+id/burgerIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/burger_icon">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@drawable/layout_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/addPeopleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addPeopleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="5dp"
                        android:text="Add People"
                        android:textColor="#545454"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/searchMainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/searchSubLayout"
                        android:layout_width="match_parent"

                        android:layout_height="30dp"
                        android:background="@drawable/search_border"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:hint="Search"
                            android:paddingLeft="14dp"
                            android:textSize="12dp">
                        </EditText>

                        <ImageView
                            android:id="@+id/searchIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/search_icon">
                        </ImageView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/people_list_border"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/peopleProfileIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/profile_picture">
                    </ImageView>

                    <LinearLayout
                        android:id="@+id/peopleListLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/peopleName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Luke Ray"
                            android:textSize="12dp">
                        </TextView>
                        <TextView
                            android:id="@+id/peopleDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:textColor="#747474"
                            android:text=" Lorem ipsum dolor sit amet."
                            android:textSize="10dp">
                        </TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/addIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/add_icon">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/people_list_border"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/peopleProfileIcon1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/profile_picture">
                    </ImageView>

                    <LinearLayout
                        android:id="@+id/peopleListLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/peopleName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Daisy Lake"
                            android:textSize="12dp">
                        </TextView>
                        <TextView
                            android:id="@+id/peopleDescription1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:textColor="#747474"
                            android:text=" Lorem ipsum dolor sit amet."
                            android:textSize="10dp">
                        </TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/addIcon1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/add_icon">
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/people_list_border"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/peopleProfileIcon2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/profile_picture">
                    </ImageView>

                    <LinearLayout
                        android:id="@+id/peopleListLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/peopleName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Mark Smith"
                            android:textSize="12dp">
                        </TextView>
                        <TextView
                            android:id="@+id/peopleDescription2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:textColor="#747474"
                            android:text=" Lorem ipsum dolor sit amet."
                            android:textSize="10dp">
                        </TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/addIcon2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/add_icon">
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/people_list_border"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/peopleProfileIcon3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/profile_picture">
                    </ImageView>

                    <LinearLayout
                        android:id="@+id/peopleListLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/peopleName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Daisy Lake"
                            android:textSize="12dp">
                        </TextView>
                        <TextView
                            android:id="@+id/peopleDescription3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:textColor="#747474"
                            android:text=" Lorem ipsum dolor sit amet."
                            android:textSize="10dp">
                        </TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/addIcon3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/add_icon">
                    </ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/people_list_border"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/peopleProfileIcon5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/profile_picture">
                    </ImageView>

                    <LinearLayout
                        android:id="@+id/peopleListLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/peopleName5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Mark Smith"
                            android:textSize="12dp">
                        </TextView>
                        <TextView
                            android:id="@+id/peopleDescription5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:textColor="#747474"
                            android:text=" Lorem ipsum dolor sit amet."
                            android:textSize="10dp">
                        </TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/addIcon5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/add_icon">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="25dp"
            android:background="@drawable/layout_border"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/addPeopleFooterLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="5dp"
                    android:text="CANCEL"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/underline_border"
                    android:textColor="#545454"
                    android:textSize="12dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/done_button_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:textSize="12dp"
                    android:text="None selected">
                </TextView>
                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/roboto_bold"
                    android:text="DONE"
                    android:textSize="12dp"
                    android:textColor="#FFFFFF">
                </Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>