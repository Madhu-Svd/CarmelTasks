<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RequestPage"
    android:orientation="vertical"
    tools:context=".RequestPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/requestPageMainLenerLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:id="@+id/requestPageHeader"
            android:background="#F6F8F9">

            <ImageView
                android:id="@+id/burgerIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/burger_icon"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/requestPageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/myRequestsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border"
                android:orientation="vertical"
                android:padding="30dp">

                <LinearLayout
                    android:id="@+id/newRequestLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/myRequestsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="5dp"
                        android:text="My Requests"
                        android:textColor="#545454"
                        android:textSize="16dp">

                    </TextView>

                    <Button
                        android:id="@+id/newRequestButton"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/new_button_border"
                        android:fontFamily="@font/roboto_bold"
                        android:text="NEW REQUEST"
                        android:textColor="#FFFFFF"></Button>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/searchMainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/searchSubLayout"
                        android:layout_width="match_parent"

                        android:layout_height="30dp"
                        android:background="@drawable/search_border"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:hint="Search..."
                            android:paddingLeft="14dp"
                            android:textSize="12dp"></EditText>

                        <ImageView
                            android:id="@+id/searchIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_marginTop="5dp"
                            android:background="@drawable/search_icon"></ImageView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/filterMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/filterLeftLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/filterIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/filter_icon">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/filterRightLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/filterTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="FILTER"
                        android:textSize="14dp"></TextView>

                    <TextView
                        android:id="@+id/filterSmallDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Showing approved requests"
                        android:textSize="10dp"></TextView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/requestListLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:orientation="horizontal"
                    android:padding="30dp">

                    <LinearLayout
                        android:id="@+id/requestListLeftLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/requestTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="7dp"
                            android:text="PUR-2019-056"></TextView>

                        <TextView
                            android:id="@+id/submittedTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="7dp"
                            android:text="Submitted On"
                            android:textColor="#747474"
                            android:textSize="12dp"></TextView>

                        <TextView
                            android:id="@+id/requestDate1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="7dp"
                            android:text="06-Jul-2019"></TextView>

                        <LinearLayout
                            android:id="@+id/approvedLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="7dp">

                            <TextView
                                android:id="@+id/statusIcon1"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/green_circle_border"
                                android:fontFamily="@font/roboto_bold"
                                android:text=""></TextView>

                            <TextView
                                android:id="@+id/requestStatus1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="8dp"
                                android:text="APPROVED"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/requestListRightLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bellIcon1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bell_icon"></ImageView>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/requestListLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_border"
                    android:orientation="horizontal"
                    android:padding="30dp">

                    <LinearLayout
                        android:id="@+id/requestListLeftLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/requestTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="7dp"
                            android:text="PUR-2019-056"></TextView>

                        <TextView
                            android:id="@+id/submittedTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="7dp"
                            android:text="Submitted On"
                            android:textColor="#747474"
                            android:textSize="12dp"></TextView>

                        <TextView
                            android:id="@+id/requestDate2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="7dp"
                            android:text="06-Jul-2019"></TextView>

                        <LinearLayout
                            android:id="@+id/approvedLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="7dp">

                            <TextView
                                android:id="@+id/statusIcon2"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/green_circle_border"
                                android:fontFamily="@font/roboto_bold"
                                android:text=""></TextView>

                            <TextView
                                android:id="@+id/requestStatus2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="8dp"
                                android:text="APPROVED"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/requestListRightLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bellIcon2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bell_icon"></ImageView>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/requestListLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:orientation="horizontal"
                    android:padding="30dp">

                    <LinearLayout
                        android:id="@+id/requestListLeftLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/requestTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="7dp"
                            android:text="PUR-2019-056"></TextView>

                        <TextView
                            android:id="@+id/submittedTilte3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="7dp"
                            android:text="Submitted On"
                            android:textColor="#747474"
                            android:textSize="12dp"></TextView>

                        <TextView
                            android:id="@+id/requestDate3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="7dp"
                            android:text="06-Jul-2019"></TextView>

                        <LinearLayout
                            android:id="@+id/approvedLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="7dp">

                            <TextView
                                android:id="@+id/statusIcon3"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/green_circle_border"
                                android:fontFamily="@font/roboto_bold"
                                android:text=""></TextView>

                            <TextView
                                android:id="@+id/requestStatus3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="8dp"
                                android:text="APPROVED"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/requestListRightLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bellIcon3"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bell_icon"></ImageView>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/requestListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/requestListLeftLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/requestTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="7dp"
                            android:text="PUR-2019-056"></TextView>

                        <TextView
                            android:id="@+id/submittedTilte"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="7dp"
                            android:text="Submitted On"
                            android:textColor="#747474"
                            android:textSize="12dp"></TextView>

                        <TextView
                            android:id="@+id/requestDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="7dp"
                            android:text="06-Jul-2019"></TextView>

                        <LinearLayout
                            android:id="@+id/approvedLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="7dp">

                            <TextView
                                android:id="@+id/statusIcon"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/green_circle_border"
                                android:fontFamily="@font/roboto_bold"
                                android:text=""></TextView>

                            <TextView
                                android:id="@+id/requestStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="8dp"
                                android:text="APPROVED"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/requestListRightLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bellIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bell_icon"></ImageView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="SHOW MORE"
                android:textSize="14dp"></TextView>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/drop_down_icon">

            </ImageView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>