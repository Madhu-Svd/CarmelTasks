<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RequisitionForm1MainLayout"
    tools:context=".RequisitionForm1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal"
            android:id="@+id/requisitionForm1Header"
            android:background="#F6F8F9">
            <ImageView
                android:id="@+id/burgerIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/burger_icon"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@drawable/layout_border"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/requisitionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/requisitionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto_bold"
                        android:padding="5dp"
                        android:text="REQUISITION"
                        android:textColor="#545454"
                        android:textSize="16dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/requisition_line">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="1"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="2"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="3"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_skyblue_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="4"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:text="5"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="28dp"
                        android:text="6"
                        android:gravity="center"
                        android:textColor="#C2BEBE"
                        android:textSize="12dp"
                        android:background="@drawable/requisition_small_circle">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/attachmentsMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <LinearLayout
                    android:id="@+id/noteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/noteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="NOTE"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>

                    <TextView
                        android:id="@+id/noteSmallDescription"
                        android:layout_width="247dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris mattis, tortor sit amet tempor vehicula."
                        android:textColor="#747474"
                        android:layout_marginTop="5dp"
                        android:textSize="10dp">
                    </TextView>
                    <LinearLayout
                        android:layout_width="280dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/layout_border">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/requestTypeMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <LinearLayout
                    android:id="@+id/requestTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/requestTypeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="REQUEST TYPE"
                        android:textColor="#000000"
                        android:textSize="14dp">
                    </TextView>

                    <TextView
                        android:id="@+id/requestTypeSmallDescription"
                        android:layout_width="247dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris mattis, tortor sit amet tempor vehicula."
                        android:textColor="#747474"
                        android:layout_marginTop="5dp"
                        android:textSize="10dp">
                    </TextView>
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:text="SELF"
                       android:textSize="12dp"
                       android:textColor="#747474"
                       android:fontFamily="@font/roboto"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="TEAM / DEPARTMENT / BRANCH"
                        android:textSize="12dp"
                        android:textColor="#747474"
                        android:fontFamily="@font/roboto"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="SOMEONE ELSE"
                        android:textSize="12dp"
                        android:textColor="#747474"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="25dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/attachmentsFooterLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/saveDraftTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="5dp"
                    android:text="SAVE DRAFT"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/underline_border"
                    android:textColor="#545454"
                    android:textSize="12dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/roboto_bold"
                    android:text="NEXT -->"
                    android:textSize="12dp"
                    android:textColor="#FFFFFF">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>